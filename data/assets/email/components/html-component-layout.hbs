<div {{#eq hideOnMobile.hideOnMobile true}} class="hide-on-mobile" {{/eq}} style="{{~#if margin.left}}padding-left:{{margin.left}}px;{{~/if~}}
    {{~#if margin.right}}padding-right:{{margin.right}}px;{{~/if~}}
    {{~#if margin.top}}padding-top:{{margin.top}}px;{{~/if~}}
    {{~#if margin.bottom}}padding-bottom:{{margin.bottom}}px;{{~/if~}}">
    <table data-content-item-id="{{$metadata.id}}" border="0" cellpadding="0" cellspacing="0" style="width: 100%; border-spacing: 0px !important;">
        <tbody>
            <tr>
                {{!-- wch-html-block is used as a marker to distinguish between different text elements --}}
                <td class="wch-html-block" {{#unless code}} data-content-item-id="{{$metadata.id}}" data-wch-editable="code" {{~/unless~}} style="{{~#if padding.left}}padding-left:{{padding.left}}px;{{~/if~}} {{~#if padding.right}}padding-right:{{padding.right}}px;{{~/if~}} {{~#if padding.top}}padding-top:{{padding.top}}px;{{~/if~}} {{~#if padding.bottom}}padding-bottom:{{padding.bottom}}px;{{~/if~}} {{~#if backgroundColor.colorCode}} background-color:{{backgroundColor.colorCode}};{{~/if~}}">
                    {{#if code}}{{hbs code}}{{~/if~}}
                </td>
            </tr>
        </tbody>
    </table>
</div>
