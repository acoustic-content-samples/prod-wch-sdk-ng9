{
  "id": "http://www.ibm.com/schemas/number-schema.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Number Element Schema",
  "description": "Schema for number element",
  "type": "object",
  "properties": {
    "schema": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z_][A-Za-z0-9_]{0,49}$": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "pattern": "^(?!\\s*$).+",
              "maxLength": 100
            },
            "description": { "type": "string", "maxLength": 500 },
            "type": { "enum": ["object"] },
            "properties": {
              "type": "object",
              "properties": {
                "elementType": {
                  "type": "object",
                  "properties": {
                    "enum": {
                      "type": "array",
                      "minItems": 1,
                      "maxItems": 1,
                      "items": { "enum": ["number"] }
                    },
                    "default": { "enum": ["number"] }
                  },
                  "required": ["enum", "default"],
                  "additionalProperties": false
                },
                "value": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "pattern": "^[a-zA-Z0-9*. \\-+_~$!',()]*$"
                    },
                    "type": { "enum": ["number", "integer"] },
                    "minimum": { "type": "number" },
                    "maximum": { "type": "number" }
                  },
                  "required": ["title", "type"],
                  "additionalProperties": false
                }
              },
              "required": ["elementType"],
              "additionalProperties": false
            },
            "required": {
              "type": "array",
              "minItems": 1,
              "maxItems": 2,
              "uniqueItems": true,
              "items": { "enum": ["elementType", "value"] }
            },
            "additionalProperties": { "enum": [false] }
          },
          "additionalProperties": false,
          "required": [ "title", "type",  "properties", "required", "additionalProperties" ]
        }
      },
      "additionalProperties": false
    },
    "form": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "pattern": "^[A-Za-z_][A-Za-z0-9_]{0,49}$"
          },
          "type": { "enum": [ "dx-fieldset" ] },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "key": { "type": "string" },
                "type": { "enum": [ "dx-number" ] }
              },
              "required": [ "key", "type" ],
              "additionalProperties": false
            },
            "minItems": 1,
            "maxItems": 1
          },
          "dxIcon": { "type": "string" }
        },
        "additionalProperties": false,
        "required": ["key", "type", "items"]
      },
      "maxItems": 1
    }
  },
  "additionalProperties": false,
  "required": ["schema", "form"]
}